/usr/local/fedora/tomcat/logs/catalina.out {
copytruncate
daily
rotate 14
compress
missingok
size 1k
su fedora fedora
}
/usr/local/fedora/tomcat/logs/*.log {
copytruncate
daily
rotate 14
compress
missingok
size 1k
su fedora fedora
}
/usr/local/fedora/server/logs/*.log {
copytruncate
daily
rotate 14
compress
missingok
size 1k
su fedora fedora
}
